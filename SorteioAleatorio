programa {
    inclua biblioteca Util -->util
  	funcao inicio()
	{
		inteiro numero, num_sort

		escreva("Escolhar um Número qualquer \n")
		leia(numero)

		num_sort = util.sorteia (0,40)

		se (numero >=0 e numero <=40)
		{
			se (numero == num_sort){
        se (numero <=5){
		escreva("Numero Sorteado é, ", num_sort,"\n")
    escreva("Você Acertou Parabéns GAnhou Cheque de R$ 5.000 \n")
		} 
    
    }senao {
         escreva("Que Pena Você Não Ganhou\n")
         escreva("Numero Sorteado é, ", num_sort,"\n")
        escreva("Tente Novamente")
            }
  }
  }
}
